{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": false,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true
    },
    "include": ["netlify/functions/**/*"],
    "exclude": ["node_modules", "dist"]
  }